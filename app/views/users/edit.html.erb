<div class="row-fluid">
	<div class="span1"></div>
  <div class="clp_box span8" style="padding-top:20px;background-color:#ffffff;border-color:#ababab;" id="main_box">
  	<%= form_for @user, html: {class: 'form-horizontal'} do |f| %>
		<form class="form-horizontal">
			<fieldset>
				<legend><strong>编辑资料</strong><small>(修改密码)</small></legend>
				<div class="control-group">
					<label class="control-label" for="input01">新密码：</label>
					<div class="controls">
						<%= f.password_field :password,
							 	class: "input-xlarge",
							 	id: "1_input_group",
							 	onkeyup: "check_sign_input(this.id,'6','20');check_input_ok('#1_input_group','#2_input_group','6','20','#ok_btn','on');" %>
						<p class="help-block">注意长度限制哦！<span class="badge" id="input_label_1">0</span></p>
					</div>
				</div>
				<div class="control-group">
					<label class="control-label" for="input01">重复密码：</label>
					<div class="controls">
						<%= f.password_field :password_confirmation,
						  	class: "input-xlarge",
						  	id: "2_input_group",
						  	onkeyup: "check_input_ok('#1_input_group','#2_input_group','6','20','#ok_btn','on')" %>
						<p class="help-block">小心点，别写错了！</p>
					</div>
				</div>
				<div class="form-actions" style="text-align:right;background-color:#ffffff;">
					<%= f.submit '保 存', class: 'btn btn-primary', disabled: 'disabled', id: 'ok_btn' %>
					<%= link_to '返回首页', root_path, class: 'btn' %>
				</div>
			</fieldset>
		<% end %>
	</div>
	<%= render 'shared/right_panel' %>
</div>
