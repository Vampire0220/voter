<script type="text/javascript">
	$('.nav li').eq(0).attr('class', 'active');
</script>
<div class="row-fluid">
	<div class="span1"></div>
	<% provide :title, "Index" %>
	<div class="clp_box span8" style="margin-top:5px;padding-top:20px;border-color:#ababab;background-color:#ffffff;" id="main_box">
