<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title><%= full_title(yield(:title)) %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>

    <!-- Le styles -->
    <%= stylesheet_link_tag 'source/css/bootstrap' %>
    <style>
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
				background-image:url('<%= image_path "source/images/masked.png" %>');
				background-postion:0 20px;
				background-repeat:repeat-x;
      }
    </style>
    <%= stylesheet_link_tag 'source/css/bootstrap-responsive' %>
    <%= stylesheet_link_tag 'source/css/clp-base' %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Le fav and touch icons -->		
		<link rel="shortcut icon" href="<%= image_path "source/ico/favicon.ico" %>">
		<link rel="apple-touch-icon-precomposed" sizes="144x144" href="<%= image_path "source/ico/apple-touch-icon-144-precomposed.ico" %>">
		<link rel="apple-touch-icon-precomposed" sizes="114x114" href="<%= image_path "source/ico/apple-touch-icon-114-precomposed.ico" %>">
		<link rel="apple-touch-icon-precomposed" sizes="72x72" href="<%= image_path "source/ico/apple-touch-icon-72-precomposed.ico" %>">
		<link rel="apple-touch-icon-precomposed" href="<%= image_path "source/ico/apple-touch-icon-57-precomposed.ico" %>">

	  <%= javascript_include_tag "source/js/bootstrap-transition" %>
	  <%= javascript_include_tag "source/js/bootstrap-alert" %>
	  <%= javascript_include_tag "source/js/bootstrap-button" %>
    <%= javascript_include_tag "source/js/bootstrap-typeahead" %>
	  <%= javascript_include_tag "source/js/clp_base" %>
    <script type="text/javascript">
      function alert_error(){
        $("#error_tips").fadeIn();
      }
      function check_input(){
        $("#error_tips").hide();
        var ele1=$("#input01").val();
        var ele2=$("#input02").val();
        if(ele1&&ele2){}
        else{alert_error();}
      }
      function error_cancel(){
        $("#error_tips").hide();
      }
      function sign_action(){
        var ele1=$("#js_hide_1");
        var ele2=$("#js_hide_2");
        var ele3=$("#js_hide_3");
        var eletop=$("#js_top");
        var ele=$("#main_box");
        var eleup=$("#js_slideup");
        ele1.stop().fadeOut("fast").queue(function(){
          ele2.stop().fadeOut("fast").queue(function(){
            ele3.stop().fadeOut("fast").queue(function(){
              eletop.stop().animate({"margin-top":"0px"},200).queue(function(){
                eleup.stop().slideUp("normal").queue(function(next){
                  ele.stop().fadeIn("fast").animate({"margin-top":"10px"},200);
                  next();
                })
                
              })
            })
          })
        })
      }
      function sign_action_back(){
        var ele1=$("#js_hide_1");
        var ele2=$("#js_hide_2");
        var ele3=$("#js_hide_3");
        var eletop=$("#js_top");
        var ele=$("#main_box");
        var eleup=$("#js_slideup");
          ele.fadeOut().queue(function(){eleup.fadeIn().queue(function(){
            eletop.stop().animate({"margin-top":"150px"},200).queue(function(){
              ele3.stop().fadeIn().queue(function(){
                ele2.stop().fadeIn().queue(function(){
                  ele1.stop().fadeIn().queue(function(){
                    stop();
                  })
                })
              })
            })
          })
          
          })  
      }
      function check_all_input_ok(){
        var key=check_input_ok('#2_input_group','#3_input_group','6','20','#ok_btn','off');
        var username=$("#1_input_group").val();
        var min=4;
        var max=8;
        if(username.length>=min&&username.length<=max&&key){
          enable_btn("#ok_btn");
        }else{
          disable_btn("#ok_btn");
        }
        
      }
    </script>
  </head>

  <body>
    <%= render 'layouts/navbar' %>
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span1"></div>
        <%= yield %>
        <%= render 'shared/right_panel' %>
      </div>
      <%= render 'layouts/footer' %>
    </div>
  </body>
  <%= debug(params) if Rails.env.development? %>
</html>